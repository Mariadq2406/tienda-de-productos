<%- include('partials/_header'); -%>

<!-- Table -->

<div class="container">
    <div class="row mt-3">
        <table class="table table-bordered table-hover">
            <thead class="bg-light">
                <tr>
                    <th>#</th>
                    <th>Producto</th>
                    <th>Precio</th>
                    <th>Fecha</th>
                    <th>Descripción</th>
                    <th>Acción</th>
                </tr>
            </thead>
            <tbody>
                <% for (var i = 0; i < products.length; i++) { %>
                <tr>
                    <td><%= (i + 1) %></td>
                    <td><%= products[i].producto%></td>
                    <td><%= products[i].precio%></td>
                    <td><%= products[i].fecha%></td>
                    <td><%= products[i].descripcion%></td>
                    <td>
                        <a href="/edit/<%= products[i]._id%>" class="btn btn-info">Editar</a>
                        <a href="/delete/<%= products[i]._id%>" class="btn btn-danger">Borrar</a>
                    </td>
                </tr>
                <% } %>
            </tbody>
        </table>
            </div>
        </div>

<%- include('partials/_footer'); -%>