<%- include('partials/_header'); -%>

<!-- Form edit -->

<div class="container">
    <div class="row mt-3">
        <div class="col-md-5 offset-md-3">
            <div class="card mt-3 mb-4">
                <div class="card-body">
                    <div class="card-header text-center">
                        <h3>Editar Producto</h3>
                    </div>
                    <form action="/edit/<%= product._id%>" method="POST">
                        <label for="formGroupExampleInput">Nombre</label>
                        <div class="form-group mt-3">
                            <input type="text" name="producto" class="form-control" value="<%= product.producto%>"
                                Required>
                        </div>
                        <div class="form-group mt-3">
                            <label for="formGroupExampleInput">Código</label>
                            <input type="number" name="codigo" class="form-control" value="<%= product.codigo%>"
                                Required>
                        </div>
                        <div class="form-group mt-3">
                            <label for="formGroupExampleInput">Precio</label>
                            <input type="number" name="precio" placeholder="0.01" class="form-control"
                                value="<%= product.precio%>" step="0.01" Required>
                        </div>
                        <div class="form-group mt-3">
                            <label for="formGroupExampleInput">Fecha de Ingreso</label>
                            <input type="date" name="fecha" value="<%= product.fecha%>" class="form-control" Required>
                        </div>
                        <div class="form-group mt-3">
                            <label for="formGroupExampleInput">Descripción</label>
                            <textarea type="text" name="descripcion" value="<%= product.descripcion%>"
                                class="form-control" rows="3" Required></textarea>
                        </div>
                        <br>
                        <button type="submit" class="btn btn-secondary btn-block col-12">Editar</button>
                    </form>
                </div>
            </div>
        </div>

        <%- include('partials/_footer'); -%>